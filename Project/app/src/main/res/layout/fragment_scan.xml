<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.ScanFrag">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcodeViewFrag"
        android:layout_width="409dp"
        android:layout_height="309dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:zxing_scanner_layout="@layout/simple_scan_layout" />

    <fragment
        android:id="@+id/ScanChildFrag"
        android:name="sini.foxy.furscanner.UI.Fragment.FarmAndIDFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeViewFrag"
        app:layout_constraintVertical_bias="0.597">

    </fragment>

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/ScanChildFrag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barcodeViewFrag" />

</androidx.constraintlayout.widget.ConstraintLayout>