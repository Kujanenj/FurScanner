<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.ScanFrag">

    <LinearLayout
        android:id="@+id/item_location_linearLayout"
        android:layout_width="413dp"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">


        <TextView
            android:id="@+id/item_location_houseLabel"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:text="House" />

        <View
            android:id="@+id/item_location_verticaldivider"
            android:layout_width="7dp"
            android:layout_height="25dp"
            android:layout_marginBottom="32dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/item_location_cageLabel"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:gravity="start"
            android:text="Cage" />

    </LinearLayout>

    <View
        android:id="@+id/item_location_horizontalDivider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="@+id/item_location_linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/item_location_linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>