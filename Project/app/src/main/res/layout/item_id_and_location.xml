<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.ScanFrag">


    <FrameLayout
        android:id="@+id/item_id_and_location_frameLayoutTOP"
        android:layout_width="419dp"
        android:layout_height="339dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/item_location_childFragTop"
            android:name="sini.foxy.furscanner.UI.Fragment.FarmAndIDFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </fragment>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/item_id_and_location_frameLayoutBOTTOM"
        android:layout_width="409dp"
        android:layout_height="388dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_id_and_location_frameLayoutTOP">

        <fragment
            android:id="@+id/item_location_childFragBottom"
            android:name="sini.foxy.furscanner.UI.Fragment.LocationFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.86">
        </fragment>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>